<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTesting">
  <test  name="ChromeTest">
  <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="testscript.LoginTest">
      <methods>
     <!--  <include name="verifyTheUserIsAbleToLoginWithValidCredentials"></include>
      <include name="verifyTheUserIsAbleToLoginWithIncorrectUsernameCorrectPin"></include>-->
      <exclude name="verifyTheUserIsAbleToLoginWithIncorrectUsernameCorrectPin"></exclude>
      <exclude name="verifyTheUserIsAbleToLoginWithValidCredentials"></exclude>
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test  name="FireFoxTest">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="testscript.LoginTest">
      <methods>
     <!--  <include name="verifyTheUserIsAbleToLoginWithValidCredentials"></include>
      <include name="verifyTheUserIsAbleToLoginWithIncorrectUsernameCorrectPin"></include>-->
      <exclude name="verifyTheUserIsAbleToLoginWithIncorrectUsernameCorrectPin"></exclude>
      <exclude name="verifyTheUserIsAbleToLoginWithValidCredentials"></exclude>
      </methods>
      </class>
    </classes>
  </test>
  
</suite> <!-- Suite -->
